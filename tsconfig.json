{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "customConditions": ["react-native"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "@/components": ["./app/components"],
      "@/components/*": ["./app/components/*"],
      "@/screens": ["./app/screens"],
      "@/screens/*": ["./app/screens/*"],
      "@/database": ["./app/database"],
      "@/database/*": ["./app/database/*"],
      "@/hooks": ["./app/hooks"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/context": ["./app/context"],
      "@/context/*": ["./app/context/*"],
      "@/utils": ["./app/utils"],
      "@/utils/*": ["./app/utils/*"],
      "@/config": ["./app/config"],
      "@/config/*": ["./app/config/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "assets/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "test/**/*"]
}
